{
  "train_batch_size": 8,
  "gradient_accumulation_steps": 8,
  "gradient_clipping": 1.0,

  "optimizer": {
    "type": "AdamW",
    "params": {
      "lr": 6e-4,
      "betas": [0.9, 0.999],
      "eps": 1e-8,
      "weight_decay": 0.05
    }
  },

  "zero_optimization": {
    "stage": 2,
    "offload_optimizer": {
      "device": "cpu",
      "pin_memory": true,
      "buffer_count": 4,
      "fast_init": false
    },
    "offload_param": {
      "device": "cpu",
      "pin_memory": true,
      "buffer_count": 4
    },
    "contiguous_gradients": true,
    "overlap_comm": true,
    "allgather_bucket_size": 2e8,
    "reduce_bucket_size": 2e8,
    "sub_group_size": 1e9,
    "reduce_scatter": true,
    "offload_optimizer_device": "cpu",
    "offload_param_device": "cpu"
  },

  "fp16": {
    "enabled": true,
    "loss_scale": 0,
    "initial_scale_power": 16,
    "loss_scale_window": 1000,
    "hysteresis": 2,
    "min_loss_scale": 1
  },

  "steps_per_print": 100,
  "wall_clock_breakdown": false,

  "comms_logger": {
    "enabled": false
  }
}
